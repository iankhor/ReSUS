<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">X</button>
  <h1>Patient Profile Modal</h1>
</div>

<div class="modal-body">

<!-- CONTENTS-->

<p id="notice"><%= notice %></p>

<h1>Patient Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Patient profile ID</th>
      <th>User ID</th>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>Region</th>
      <th>Ethnicity</th>
      <th>Blood type</th>
      <th>Marital status</th>
      <th>Allergy</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Contact number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_profiles.each do |patient_profile| %>
      <tr>
        <td><%= patient_profile.id %></td>
        <td><%= patient_profile.user.id %></td>
        <td><%= patient_profile.user.email %></td>
        <td><%= patient_profile.first_name %></td>
        <td><%= patient_profile.last_name %></td>
        <td><%= patient_profile.gender.id %></td>
        <td><%= patient_profile.date_of_birth %></td>
        <td><%= patient_profile.region.id %></td>
        <td><%= patient_profile.ethnicity.id %></td>
        <td><%= patient_profile.blood_type.id %></td>
        <td><%= patient_profile.marital_status.id %></td>
        <td><%= patient_profile.allergy.id %></td>
        <td><%= patient_profile.height %></td>
        <td><%= patient_profile.weight %></td>
        <td><%= patient_profile.contact_number %></td>
        <td><%= link_to 'Show', patient_profile %></td>
        <td><%= link_to 'Edit', edit_patient_profile_path(patient_profile) %></td>
        <td><%= link_to 'Destroy', patient_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient Profile', new_patient_profile_path %>

<!-- CONTENTS-->

</div>

<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>