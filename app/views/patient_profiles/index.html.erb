<p id="notice"><%= notice %></p>

<h1>Patient Profiles</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>Region</th>
      <th>Ethnicity</th>
      <th>Blood type</th>
      <th>Marital status</th>
      <th>Allergy</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Contact number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_profiles.each do |patient_profile| %>
      <tr>
        <td><%= patient_profile.user %></td>
        <td><%= patient_profile.first_name %></td>
        <td><%= patient_profile.last_name %></td>
        <td><%= patient_profile.gender %></td>
        <td><%= patient_profile.date_of_birth %></td>
        <td><%= patient_profile.region %></td>
        <td><%= patient_profile.ethnicity %></td>
        <td><%= patient_profile.blood_type %></td>
        <td><%= patient_profile.marital_status %></td>
        <td><%= patient_profile.allergy %></td>
        <td><%= patient_profile.height %></td>
        <td><%= patient_profile.weight %></td>
        <td><%= patient_profile.contact_number %></td>
        <td><%= link_to 'Show', patient_profile %></td>
        <td><%= link_to 'Edit', edit_patient_profile_path(patient_profile) %></td>
        <td><%= link_to 'Destroy', patient_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

